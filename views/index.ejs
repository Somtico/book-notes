<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Book Tracker</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <!-- Header Section -->
  <header>
    <div class="container">
      <h1 class="logo">BookTracker</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/add-book">Add Book</a>
        <a href="/categories">Categories</a>
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h2>Welcome to Your Book Tracker</h2>
      <p>Track the books you've read, rate them, and discover new ones!</p>
      <a href="/add-book" class="btn">Add a Book</a>
    </div>
  </section>

  <!-- Featured Books Section -->
  <section class="featured-books">
    <div class="container">
      <h2>Featured Books</h2>
      <div class="book-grid">
        <% books.forEach(book => { %>
          <div class="book-card">
            <img src="<%= book.coverImage %>" alt="<%= book.title %>">
            <h3><%= book.title %></h3>
            <p><%= book.author %></p>
            <p><%= book.userRating %> / 5</p>
            <a href="/book/<%= book.id %>" class="btn">View Details</a>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

  <!-- Sorting Options Section -->
  <section class="sorting-options">
    <div class="container">
      <form action="/" method="GET">
        <label for="sort">Sort by:</label>
        <select name="sort" id="sort">
          <option value="rating">Rating</option>
          <option value="recency">Recency</option>
          <option value="title">Title</option>
        </select>
        <button type="submit" class="btn">Sort</button>
      </form>
    </div>
  </section>

  <!-- Footer Section -->
  <footer>
    <div class="container">
      <p>&copy; 2024 BookTracker. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
